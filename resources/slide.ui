<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="SlideRow" parent="GtkBox">
    <property name="spacing">10</property>
    <child>
      <object class="GtkCheckButton" id="cb_slide">
      </object>
    </child>
    <child>
      <object class="GtkImage" id="img_slide">
        <property name="resource">/org/zerosofts/BeamerQuickie/icons/slide.svg</property>
	<property name="pixel-size">128</property>
      </object>
    </child>

    <child>
      <object class="GtkLabel" id="lb_slide">
	<property name="hexpand">True</property>
	<property name="halign">start</property>
      </object>
    </child>
    <child>
      <object class="GtkButton" id="btn_slide_edit">
	<property name="valign">start</property>
        <property name="tooltip-text" translatable="1">Edit Frame</property>
        <child>
          <object class="GtkImage">
            <property name="resource">/org/zerosofts/BeamerQuickie/icons/edit.svg</property>
          </object>
	</child>
      </object>
    </child>
    <child>
      <object class="GtkButton" id="btn_slide_top">
	<property name="valign">start</property>
        <child>
          <object class="GtkImage">
            <property name="resource">/org/zerosofts/BeamerQuickie/icons/move-top.svg</property>
          </object>
	</child>
      </object>
    </child>
    <child>
      <object class="GtkButton" id="btn_slide_up">
	<property name="valign">start</property>
        <property name="tooltip-text" translatable="1">Move Up</property>
        <child>
          <object class="GtkImage">
            <property name="resource">/org/zerosofts/BeamerQuickie/icons/move-up.svg</property>
          </object>
	</child>
      </object>
    </child>
    <child>
      <object class="GtkButton" id="btn_slide_down">
	<property name="valign">start</property>
        <property name="tooltip-text" translatable="1">Move Down</property>
        <child>
          <object class="GtkImage">
            <property name="resource">/org/zerosofts/BeamerQuickie/icons/move-down.svg</property>
          </object>
	</child>
      </object>
    </child>
    <child>
      <object class="GtkButton" id="btn_slide_bottom">
	<property name="valign">start</property>
        <child>
          <object class="GtkImage">
            <property name="resource">/org/zerosofts/BeamerQuickie/icons/move-bottom.svg</property>
          </object>
	</child>
      </object>
    </child>
    
    <child>
      <object class="GtkButton" id="btn_slide_menu">
	<property name="valign">start</property>
        <property name="tooltip-text" translatable="1">Options</property>
        <child>
          <object class="GtkImage">
            <property name="resource">/org/zerosofts/BeamerQuickie/icons/menu.svg</property>
          </object>
	</child>
      </object>
    </child>
  </template>
</interface>
